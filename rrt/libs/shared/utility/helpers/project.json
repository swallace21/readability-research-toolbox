{
  "root": "libs/shared/utility/helpers",
  "sourceRoot": "libs/shared/utility/helpers/src",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared/utility/helpers",
        "main": "libs/shared/utility/helpers/src/index.ts",
        "tsConfig": "libs/shared/utility/helpers/tsconfig.lib.json",
        "assets": ["libs/shared/utility/helpers/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/shared/utility/helpers/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/shared/utility/helpers"],
      "options": {
        "jestConfig": "libs/shared/utility/helpers/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["helper"]
}
